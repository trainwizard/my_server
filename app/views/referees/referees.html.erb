<h1>create new referee</h1>

<%= for_for @referee do |f| %>
    <div class="form-group">
      <%= f.label :name %>
       <%= f.text_field :name, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.text_field :rules_url, class: 'form-control'%>
      <%= f.label :rules_url %>
    </div>

    <div class="form-group">
      <%= f.label :players_per_game %>
      <%= f.text_field :players_per_game %>
    </div>
     <div class="form-group">
       <%= f.label :upload %>
       <%= f.file_field :upload %>
     </div>

    <%= f.submit 'Uplaod a new referee'%>
<% end %>