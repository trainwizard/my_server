<% if current_user then %>
   <% if current_user.admin? %>
      <li> <%= link_to user.username,user%>
      <% if !user.admin? then%> 
         | <%= link_to "delete", user, method: :delete, data: {confirm: "Are you sure you want to delete #{ user.username }? (I heard he's pretty sweet)"} %>
      <%end%>
      </li>
   <% else %>
      <li> <%= link_to user.username,user%> </li>
   <%end%>
<%end%>
